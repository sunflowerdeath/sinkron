{
    "name": "sinkron-app",
    "version": "0.0.1",
    "private": true,
    "description": "",
    "scripts": {
        "lint": "oxlint src",
        "build": "NODE_ENV=production rspack --config=rspack.config.js",
        "migrate:app": "typeorm migration:run -d ./build/app-db.js",
        "migrate:sinkron": "typeorm migration:run -d ./build/sinkron-db.js",
        "migrate": "pnpm migrate:app && pnpm migrate:sinkron",
        "start": "pnpm migrate && node ./build/main.js",
        "dev": "SINKRON_CONFIG=$(cat ./config.dev.json) pnpm start",
        "test:db": "docker compose -f ./postgres-compose.yml up -d --force-recreate",
        "test:build": "rspack --config=rspack.config.test.js",
        "test:run": "SINKRON_CONFIG=$(cat config.test.json) mocha ./build/test.js",
        "test": "pnpm test:db && pnpm test:build && pnpm test:run"
    },
    "author": "sunflowerdeath",
    "license": "Unlicense",
    "devDependencies": {
        "@rspack/cli": "^1.0.13",
        "@rspack/core": "^1.0.13",
        "@types/lodash": "^4.17.10",
        "@types/mocha": "^10.0.9",
        "@types/node": "^18.19.55",
        "@types/nodemailer": "^6.4.16",
        "@types/uuid": "^9.0.8",
        "mocha": "^10.7.3",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "@automerge/automerge": "^2.2.8",
        "@aws-sdk/client-s3": "^3.668.0",
        "@fastify/cors": "^10.0.1",
        "ajv": "^8.17.1",
        "bowser": "^2.11.0",
        "date-fns": "^4.1.0",
        "fastify": "^5.0.0",
        "lodash": "^4.17.21",
        "mkdirp": "^3.0.1",
        "nodemailer": "^6.9.15",
        "pg": "^8.13.0",
        "pino": "^8.21.0",
        "sharp": "^0.33.5",
        "sinkron": "workspace:*",
        "typeorm": "^0.3.20",
        "uuid": "^9.0.1"
    }
}
