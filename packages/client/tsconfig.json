{
    "compilerOptions": {
        "strict": true,

        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true,

        "declaration": true,
        "declarationDir": "./lib",
        "emitDeclarationOnly": true,
        "target": "es2015",
        "outDir": "build",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    }
}
