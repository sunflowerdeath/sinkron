{
    "compilerOptions": {
        "strict": true,

        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true,

        "noEmit": true,
        "target": "es2015",
        "lib": ["es6", "es7", "es2015", "dom", "esnext"],
        "jsx": "react-jsx",

        "paths": {
            "~/*": ["./src/*"]
        },

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "include": ["src/**/*.ts*"]
}
