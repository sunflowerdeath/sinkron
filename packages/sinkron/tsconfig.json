{
    "include": ["src/**/*"],
    "compilerOptions": {
        "strict": true,

        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,

        "declaration": true,
        "declarationDir": "./types",
        // "emitDeclarationOnly": true,

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    }
}
